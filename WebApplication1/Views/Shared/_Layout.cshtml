                        <span class="fa icon-expand fa-bars"></span>
                        <span class="fa icon-close fa-times"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                @Html.ActionLink("Home", "Index", "Account", null, new { @class = "nav-link" })
                            </li>

                            <li>
                                @Html.ActionLink("Insurances", "Insurance", "Account",null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Testimonial", "Testimonials", "Account", null, new { @class ="nav-link"})
                            </li>
                            <li>
                                @Html.ActionLink("SiteMap", "Sitemap", "Account", null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Contact", "ContactUs", "Account", null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("AboutUs", "AboutUs", "Account", null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Register Now", "Register", "Account", null, new { @class = "nav-link" })
                            </li>

                            @if (Session["UserID"] != null)
                            {

                                <li class="dropdown dropdown-item">
                                    <a class="dropdown-toggle nav-item nav-link" data-toggle="dropdown" href="#">
                                        My Account<span class="glyphicon glyphicon-menu-hamburger" style="color:lightgray"></span>

                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li style="text-align:center"> @Html.ActionLink("My Profile", "Details", "Customers", new { id = Session["UserID"] }, new { @class = "nav-link" })</li>
                                        <li style="text-align:center">@Html.ActionLink("Vehicle", "VehicleByCustomer", "Vehicles", new { id = Session["UserID"] }, new { @class = "nav-link" })</li>
                                        <li style="text-align:center">@Html.ActionLink("Purchase", "PurchaseByCustomer", "Purchases", new { id = Session["UserID"] }, new { @class = "nav-link" })</li>
                                        <li style="text-align:center">@Html.ActionLink("InsurancePoilcy", "TypeByCustomer", "InsurancePolicies", new { id = Session["UserId"] }, new { @class = "nav-link" })</li>
                                        <li style="text-align:center">@Html.ActionLink("Billings", "BillsByCustomer", "Billings", new { id = Session["UserId"] }, new { @class = "nav-link" })</li>
                                        <li style="text-align:center">@Html.ActionLink("Claims", "ClaimByCustomer", "Claims", new { id = Session["UserID"] }, new { @class = "nav-link" })</li>
                                    </ul>
                                </li>


                                <li class="nav-item ml-3">
                                    @Html.ActionLink("Logout", "LogOut", "Account", null, new { @class = "btn btn-outline-primary btn-style mr-2 btn-style danger" })
                                </li>
                            }
                            else if (Session["Admin"] != null)
                            {
                                <li class="dropdown dropdown-item">
                                    <a class="dropdown-toggle nav-item nav-link" data-toggle="dropdown" href="#">
                                        Admin Pages<span class="glyphicon glyphicon-menu-hamburger" style="color:lightgray"></span>

                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li class="nav-link nav-item" style="text-align:center">@Html.ActionLink("Customer", "Customer", "Admin")</li>
                                        <li class="nav-link nav-item" style="text-align:center">@Html.ActionLink("Vehicles", "Vehicle", "Admin")</li>
                                        <li class="nav-link nav-item" style="text-align:center">@Html.ActionLink("Insurance", "Insurance", "Admin")</li>
                                        <li class="nav-link nav-item" style="text-align:center">@Html.ActionLink("Bills", "Bill", "Admin")</li>
                                        <li class="nav-link nav-item" style="text-align:center">@Html.ActionLink("Claims", "Claim", "Admin")</li>
                                        <li class="nav-item nav-link" style="text-align:center">@Html.ActionLink("Expenses", "Comp_Exp", "Admin")</li>
                                        <li class="nav-item nav-link" style="text-align:center">@Html.ActionLink("Purchases", "Purchase", "Admin")</li>
                                    </ul>
                                </li>

                                <li class="nav-item ml-3">
                                    @Html.ActionLink("Logout", "LogOut", "Account", null, new { @class = "btn btn-outline-primary btn-style mr-2 btn-style danger" })
                                </li>
                            }
                            else
                            {
                                <li class="nav-item ml-3">
                                    @Html.ActionLink("Login", "Login", "Account",null, new { @class = "btn btn-outline-primary btn-style mr-2 btn-style danger" })
                                </li>
                            }
                            <li>

                        </ul>
                            <!-- //toggle switch for light and dark theme -->
</div>
                    <!-- toggle switch for light and dark theme -->
                    <div class="mobile-position">
                        <nav class="navigation">
                            <div class="theme-switch-wrapper">
                                <label class="theme-switch" for="checkbox">
                                    <input type="checkbox" id="checkbox">
                                    <div class="mode-container">
                                        <i class="gg-sun"></i>
                                        <i class="gg-moon"></i>
                                    </div>
                                </label>
                            </div>
                        </nav>
                    </div>
                </nav>
            </div>
        </section>
    </header>
    <!-- //header -->
    <!-- footer -->
