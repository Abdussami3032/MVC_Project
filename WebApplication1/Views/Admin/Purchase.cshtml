@model IEnumerable<WebApplication1.Models.Purchase>

@{
    ViewBag.Title = "Purchase";
}
<div style="margin-top:100px">
    <h2 style="text-align:center">Purchase</h2>

    <p style="text-align:center">
        @Html.ActionLink("Create New", "Create", "Purchases")
    </p>
    <div class="">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pur_Pol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pur_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total_Amt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PP_Status)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pur_Pol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pur_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total_Amt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PP_Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Purchases", new { id = item.Pur_Id }, null) |
                        @Html.ActionLink("Details", "Details", "Purchases", new { id = item.Pur_Id}, null) |
                        @Html.ActionLink("Delete", "Delete", "Purchases", new { id = item.Pur_Id}, null)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>