<h6 class="title-small text-center">Our Services</h6>
<h3 class="title-big mb-md-5 mb-4 text-center">Insurance Policies</h3>

<p class="title-small text-center">
    @Html.ActionLink("Create New", "Create")
</p>

<section class="w3l-bottom-grids-6 py-5" />
<div class="grids-area-hny main-cont-wthree-fea row">
    <div class="container" style="margin-left:300px">
        <div class="col-lg-4 col-md-6 grids-feature">
            @foreach (var item in Model)
            {


                <div class="area-box">
                    <h4>
                        @Html.DisplayNameFor(model => model.PolicyName)&nbsp;&nbsp; :
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.PolicyName)
                    </h4>
                    <br />
                    <p style="font-weight:bold">@Html.DisplayNameFor(model => model.Est_Amount) &nbsp;&nbsp; :</p>
                    &nbsp;
                    <p>@Html.DisplayFor(modelItem => item.Est_Amount)</p>
                    <br />
                    <p style="font-weight:bold">@Html.DisplayNameFor(model => model.Ins_Amount)&nbsp;&nbsp; :</p>
                    &nbsp;
                    <p>:@Html.DisplayFor(modelItem => item.Ins_Amount)</p>
                    <br />
                    <p style="font-weight:bold">@Html.DisplayNameFor(model => model.Pol_Duration)&nbsp;&nbsp; :</p>
                    &nbsp;
                    <p>@Html.DisplayFor(modelItem => item.Pol_Duration)</p>

                    <br />
                    @Html.ActionLink("Edit", "Edit", new { id = item.Pol_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Pol_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Pol_Id })

                   
                </div>


            }
        </div>
        </div>
    </div>
